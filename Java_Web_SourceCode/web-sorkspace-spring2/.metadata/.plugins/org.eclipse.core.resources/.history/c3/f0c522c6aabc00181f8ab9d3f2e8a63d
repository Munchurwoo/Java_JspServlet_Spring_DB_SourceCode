<?xml version="1.0" encoding="UTF-8"?>
<!-- Sql Mapper -->
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="emp">
	<sql id="selectEmp">
		select empNo, ename,job,deptNo from emp
	</sql>

	<select id="getEmpCount" resultType="int">
		select count(*) from emp
	</select>

	<select id="findEmpListByDeptNo" resultType="empVO">
		<include refid="selectEmp" />
		where deptNo=${value}
	</select>

	<select id="findEmpListLikeName" resultType="empVO">
		<include refid="selectEmp"></include>
		where ename like '%' || #{value} || '%'
	</select>

	<!-- MyBatis Dynamic SQL 적용 1. 사원명과 부서번호가 모두 없을 때는 전체 검색 2. 부서번호만 있으면 부서번호로 
		검색 3. 사원명만 있으면 사원명으로 검색 4. 부서번호와 사원명 모두 있으면 사원명 and 부서번호로 검색 -->

	<select id="findEmpListNameAndDeptNo" resultType="empVO">
		<include refid="selectEmp"></include>
		<where>
			<if test="deptNo!=null and deptNo!=' '">
				deptNo=#{deptNo}
			</if>
			<if test="ename!=null and ename!=' '">
				and ename like '%' || #{ename} || '%'
			</if>
		</where>
	</select>
</mapper>